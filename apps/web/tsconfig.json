{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/analytics": ["./analytics/index.ts"],
      "@/api/*": ["./app/api/*"],
      "@/assets/*": ["./assets/*"],
      "@/components/*": ["./components/*"],
      "@/fonts/*": ["./fonts/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utilities/*": ["./utilities/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
